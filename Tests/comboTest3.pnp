display = hide : h(NO);

_w = 40;
_h = _w;
xPos = 100;
yPos = xPos;

for 0 : 500
{
   yPos = yPos + rayon;
   _c = rect : width(_w) : height(_h);
   
   if step == 0
   {
      blue = color : name("blue");
      _c = rect : width(_w) : height(_h) : fill_color(blue);
   }
   
   if step == 250
   {
      red = color : name("red");
      _c = rect : width(_w) : height(_h) : fill_color(red);
   }
   
   if step == 500
   {
      blue = color : name("blue");
      _c = rect : width(_w) : height(_h) : fill_color(blue);
   }
   
   apply display
   {
      _c;
   }
}
